<?xml version="1.0" encoding="utf-8" ?>
<seed-data>

    <import file="CoreSelectionData.xml" data-source="XML" entity="Core.Selection">
        <map selector="/Data/CoreSelections/CoreSelection" where="it.Name == Name" update="false">
            <map property="Name" source="@Name" />
            <map property="DisplayName" source="@DisplayName" />
            <map property="Feature" source="@Feature" />
        </map>
    </import>

    <!-- Roles -->
    <import file="SecurityData.xml" data-source="XML" entity="Core.Role">
        <map selector="/Data/Roles/Role" where="it.Name == Name" update="false">
            <map property="Name" source="@Name" />
            <map property="DisplayName" source="@DisplayName" />
        </map>
    </import>

    <!-- Users -->
    <import file="SecurityData.xml" data-source="XML" entity="Core.User">
        <map selector="/Data/Users/User" where="it.UserName == UserName" update="false">
            <map property="UserName" source="@UserName" />
            <map property="Password" source="@Password" />
            <map property="FullName" source="@FullName" />
        </map>
    </import>

</seed-data>